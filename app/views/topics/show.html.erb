<h1><%= @topic.name %></h1>

<% if policy(@topic).update? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn-btn-success' %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
    <% @posts.each do |p| %>
      <div class="media">
	<div class="media-body">
	  <h4 class="media-heading">
	    <%= link_to (markdown p.title), [@topic, p] %> <%= image_tag(p.image.thumb.url) if p.image? %>
	  </h4>
	  <small>
	    <%= image_tag(p.user.avatar.tiny.url) if p.user.avatar? %>
	    submitted <%= time_ago_in_words(p.created_at) %> ago by
	    <%= p.user.name %><br/>
	    <%= p.comments.count %> Comments
	  </small>
        </div>
      </div>
      <% end %>
      <%= will_paginate @posts %>
  </div>
  <div class="col-md-4">
    <% if policy(Post.new).create? %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
